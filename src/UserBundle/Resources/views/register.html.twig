{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Register!</h1>
                {{ form_start(form) }}
                {{ form_row(form.email) }}

                {{ include('UserBundle::_editform.html.twig') }}

                {{ form_widget(form.captcha) }}
                <br>
                <button type="submit" class="btn btn-primary" formnovalidate>Register</button>
                <a href="{{ path('security_login') }}">I already have an account</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}