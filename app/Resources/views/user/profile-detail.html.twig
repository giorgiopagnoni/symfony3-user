{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>{{ 'user.profile'|trans }}</h1>
                {{ form_start(form) }}

                {% if profile == 'association' %}
                    {{ form_row(form.association) }}
                {% elseif profile == 'private' %}
                    {{ form_row(form.fullname) }}
                {% endif %}

                <button type="submit" class="btn btn-primary" formnovalidate>Save</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}