{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>{{ 'user.reset-password'|trans }}</h1>

                {{ form_start(form) }}
                {{ form_row(form._username) }}

                {% if form.captcha is defined %}
                    {{ form_widget(form.captcha) }}
                {% else %}
                    {{ form_row(form.recaptcha) }}
                {% endif %}

                <button type="submit" class="btn btn-primary" formnovalidate>Reset password</button>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}